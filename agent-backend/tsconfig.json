{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      // "./src/types",
      // "./node_modules/@types",
      "../backend-service/src/types",
      "../backend-service/node_modules/@types"
    ],
    "paths": {
      "@backend-service/*": [
        "../backend-service/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
