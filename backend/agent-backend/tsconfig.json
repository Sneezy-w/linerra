{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "system": [
        "../system/src"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../system"
    }
  ],
}