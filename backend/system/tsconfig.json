    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "typeRoots": [
    //   "./src/types",
    //   "./node_modules/@types",
    // ]
  },
  "include": [
    "src/**/*",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}